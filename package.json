{
    "name": "3reenshop-client",
    "version": "1.0.3",
    "private": true,
    "scripts": {
        "dev": "concurrently \"next dev\" \"npm run storybook\"",
        "build": "next build",
        "release:prepare": "shipjs prepare",
        "release:trigger": "shipjs trigger",
        "start": "next start",
        "storybook": "start-storybook -p 6006 -c .storybook",
        "commit": "git-cz",
        "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\"",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix --cache",
        "test": "jest --passWithNoTests --no-cache --runInBand",
        "test:watch": "yarn test --watch",
        "test:staged": "cross-env CI=true yarn test --findRelatedTests",
        "test:ci": "yarn test --coverage"
    },
    "dependencies": {
        "classnames": "2.2.6",
        "next": "9.5.3",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "sass": "1.26.11"
    },
    "devDependencies": {
        "@babel/core": "7.11.6",
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@storybook/addon-actions": "6.0.22",
        "@storybook/addon-backgrounds": "6.0.22",
        "@storybook/addon-docs": "6.0.22",
        "@storybook/addon-knobs": "6.0.22",
        "@storybook/addon-links": "6.0.22",
        "@storybook/addon-viewport": "6.0.22",
        "@storybook/addons": "6.0.22",
        "@storybook/preset-scss": "1.0.2",
        "@storybook/react": "6.0.22",
        "@testing-library/jest-dom": "5.11.4",
        "@testing-library/react": "11.0.4",
        "@testing-library/user-event": "12.1.5",
        "@types/classnames": "2.2.10",
        "@types/jest": "26.0.14",
        "@types/node": "14.11.1",
        "@types/react": "16.9.49",
        "@types/react-dom": "16.9.8",
        "@types/testing-library__react": "10.2.0",
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.1.1",
        "babel-jest": "26.3.0",
        "babel-loader": "8.1.0",
        "babel-plugin-module-resolver": "4.0.0",
        "babel-preset-react-app": "9.1.2",
        "commitizen": "4.2.1",
        "concurrently": "5.3.0",
        "cross-env": "7.0.2",
        "css-loader": "4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "7.9.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-babel-module": "5.1.2",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest-dom": "3.2.3",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.20.6",
        "eslint-plugin-react-hooks": "4.1.2",
        "eslint-plugin-testing-library": "3.9.0",
        "husky": "4.3.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "26.4.2",
        "jest-watch-typeahead": "0.6.1",
        "lint-staged": "10.4.0",
        "prettier": "2.1.2",
        "sass-loader": "10.0.2",
        "shipjs": "0.22.0",
        "style-loader": "1.2.1",
        "ts-jest": "26.4.0",
        "typescript": "4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "yarn test:ci"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "yarn test:staged"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
