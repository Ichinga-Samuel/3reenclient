{
    "name": "3reenshop-client",
    "version": "1.0.2",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "prerelease": "git checkout master && git pull origin master",
        "release": "standard-version -a",
        "postrelease": "run-s release:tags release:github",
        "release:tags": "git push --follow-tags origin master",
        "release:github": "conventional-github-releaser -p angular",
        "release:major": "standard-version -- --release-as major",
        "release:minor": "standard-version -- --release-as minor",
        "release:patch": "standard-version -- --release-as patch",
        "start": "next start",
        "commit": "git-cz",
        "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\"",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix --cache",
        "test": "jest --passWithNoTests --no-cache --runInBand",
        "test:watch": "yarn test --watch",
        "test:staged": "cross-env CI=true yarn test --findRelatedTests",
        "test:ci": "yarn test --coverage"
    },
    "dependencies": {
        "next": "^9.5.3",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@testing-library/user-event": "^12.1.5",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.1",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@types/testing-library__react": "^10.2.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "babel-jest": "^26.3.0",
        "commitizen": "^4.2.1",
        "conventional-github-releaser": "^3.1.5",
        "cross-env": "^7.0.2",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest-dom": "^3.2.3",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-testing-library": "^3.9.0",
        "husky": "^4.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.4.2",
        "jest-watch-typeahead": "^0.6.1",
        "lint-staged": "^10.4.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "standard-version": "^9.0.0",
        "ts-jest": "^26.4.0",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "yarn test:ci"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "yarn test:staged"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
